{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "esModuleInterop": true
  },
  "include": [
    "npm_scripts",
    "src"
  ],
  "compileOnSave": true
}
